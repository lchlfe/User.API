@using Microsoft.AspNetCore.Authentication
@{
    ViewData["Title"] = "Privacy Policy";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<dl>
    @foreach (var claim in User.Claims)
    {
        <dt>@claim.Type</dt>
        <dt>@claim.Value</dt>
    }
    
    <dt>Access Token</dt>
    <dt>@await ViewContext.HttpContext.GetTokenAsync("access_token")</dt>
    
    <dt>Refresh Token</dt>
    <dt>@await ViewContext.HttpContext.GetTokenAsync("refresh_token")</dt>
    
    <dt>Id Token</dt>
    <dt>@await ViewContext.HttpContext.GetTokenAsync("id_token")</dt>
</dl>
